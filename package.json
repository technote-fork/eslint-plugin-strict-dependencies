{
  "name": "@technote-space/eslint-plugin-strict-dependencies",
  "version": "0.2.7",
  "description": "Restrict imports between files according to the configured dependency rules.",
  "repository": {
    "type": "git",
    "url": "https://github.com/technote-space/eslint-plugin-strict-dependencies.git"
  },
  "license": "MIT",
  "contributors": [
    {
      "name": "Technote",
      "email": "technote.space@gmail.com",
      "url": "https://technote.space"
    }
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "rm -rf ./build && tsc",
    "cover": "jest --coverage",
    "lint": "eslint 'src/**/*.ts' '__tests__/**/*.ts' --cache",
    "lint:fix": "eslint --fix 'src/**/*.ts' '__tests__/**/*.ts'",
    "prepare": "husky install",
    "test": "yarn lint && yarn cover",
    "update": "npm_config_yes=true npx npm-check-updates -u --timeout 100000 && yarn install && yarn upgrade && yarn audit"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@textlint/ast-node-types": "^12.1.0",
    "@types/is-glob": "^4.0.2",
    "@types/jest": "^27.4.0",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^17.0.18",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "husky": "^7.0.4",
    "is-glob": "^4.0.3",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "micromatch": "^4.0.4",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
