{
  "name": "@technote-space/eslint-plugin-strict-dependencies",
  "version": "0.2.9",
  "description": "Restrict imports between files according to the configured dependency rules.",
  "repository": {
    "type": "git",
    "url": "https://github.com/technote-space/eslint-plugin-strict-dependencies.git"
  },
  "license": "MIT",
  "contributors": [
    {
      "name": "Technote",
      "email": "technote.space@gmail.com",
      "url": "https://technote.space"
    }
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "rm -rf ./build && tsc",
    "cover": "vitest run --coverage",
    "lint": "eslint 'src/**/*.ts' --cache",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "prepare": "husky install",
    "test": "yarn lint && yarn cover",
    "update": "npm_config_yes=true npx npm-check-updates -u --timeout 100000 && yarn install && yarn upgrade && yarn audit"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@textlint/ast-node-types": "^12.2.2",
    "@types/is-glob": "^4.0.2",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^18.11.7",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "@vitest/coverage-c8": "^0.24.3",
    "eslint": "^8.26.0",
    "husky": "^8.0.1",
    "is-glob": "^4.0.3",
    "lint-staged": "^13.0.3",
    "micromatch": "^4.0.5",
    "typescript": "^4.8.4",
    "vitest": "^0.24.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
