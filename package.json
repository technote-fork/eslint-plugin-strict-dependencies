{
  "name": "@technote-space/eslint-plugin-strict-dependencies",
  "version": "0.2.8",
  "description": "Restrict imports between files according to the configured dependency rules.",
  "repository": {
    "type": "git",
    "url": "https://github.com/technote-space/eslint-plugin-strict-dependencies.git"
  },
  "license": "MIT",
  "contributors": [
    {
      "name": "Technote",
      "email": "technote.space@gmail.com",
      "url": "https://technote.space"
    }
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "rm -rf ./build && tsc",
    "cover": "jest --coverage",
    "lint": "eslint 'src/**/*.ts' '__tests__/**/*.ts' --cache",
    "lint:fix": "eslint --fix 'src/**/*.ts' '__tests__/**/*.ts'",
    "prepare": "husky install",
    "test": "yarn lint && yarn cover",
    "update": "npm_config_yes=true npx npm-check-updates -u --timeout 100000 && yarn install && yarn upgrade && yarn audit"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@textlint/ast-node-types": "^12.2.1",
    "@types/is-glob": "^4.0.2",
    "@types/jest": "^28.1.4",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.18.0",
    "husky": "^8.0.1",
    "is-glob": "^4.0.3",
    "jest": "^28.1.2",
    "lint-staged": "^13.0.3",
    "micromatch": "^4.0.5",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
