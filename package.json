{
  "name": "@technote-space/eslint-plugin-strict-dependencies",
  "version": "0.3.5",
  "description": "Restrict imports between files according to the configured dependency rules.",
  "repository": {
    "type": "git",
    "url": "https://github.com/technote-space/eslint-plugin-strict-dependencies.git"
  },
  "license": "MIT",
  "contributors": [
    {
      "name": "Technote",
      "email": "technote.space@gmail.com",
      "url": "https://technote.space"
    }
  ],
  "type": "module",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs"
  },
  "main": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --emitDeclarationOnly && rollup -c",
    "cover": "vitest run --coverage",
    "lint": "eslint 'src/**/*.ts' --cache",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "prepare": "husky install",
    "test": "yarn lint && yarn typecheck && yarn cover",
    "typecheck": "tsc --noEmit",
    "update": "npm_config_yes=true npx npm-check-updates -u --timeout 100000 && yarn install && yarn upgrade && yarn audit"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@rollup/plugin-typescript": "^11.1.2",
    "@sindresorhus/tsconfig": "^3.0.1",
    "@textlint/ast-node-types": "^13.3.3",
    "@types/is-glob": "^4.0.2",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-c8": "^0.33.0",
    "eslint": "^8.44.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "is-glob": "^4.0.3",
    "lint-staged": "^13.2.3",
    "micromatch": "^4.0.5",
    "rollup": "^3.26.2",
    "typescript": "^5.1.6",
    "vitest": "^0.33.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
